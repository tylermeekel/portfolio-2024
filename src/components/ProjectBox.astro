---
interface Props {
	title: string;
    status: string;
    href: string;
    description: string;
}

const { title,status,href,description } = Astro.props;
---

<a href={href.length > 0 ? href : "/projects"} class:list={["card"]}>
	<h1>{title}</h1>
    <p class="status">Status: {status}</p> 
    <p class="description">{description}</p>
	<slot />
</a>
<style>
	.card:hover {
		box-shadow: inset 0 0 0 5px #00ADB5;
	}

    a {
        text-decoration: none;
    }

	.card {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 5px;
		padding: 20px;
		background-color: #393E46;
		color: #EEEEEE;
		background-image: none;
		border-radius: 7px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	h1 {
		color: #00ADB5;
		font-size: medium;
	}
	.status {
        color: darkgray;
	}

    .description {
        width: 50%;
    }
</style>
